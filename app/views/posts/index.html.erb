<h1>Listing Posts</h1>
  <div class="card-deck">
    <% @posts.each do |post| %>
      <div class="card bg-light mb-3" style="width: 18rem;">
        <img src=<%= post.photo_url %> class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p><%= post.author_name %></p>
          <p><%= post.caption %></p>
          <p><%= link_to 'Read More', post_path(post) %><P>
          <p>
            <%= link_to '', edit_post_path(post), :class => "bx bxs-edit" %>
            <%= link_to '', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, :class => "bx bxs-trash" %>
          </p>
        </div>
     </div>
    <% end %>
  </div>
</table>
